<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantalla_ini"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        app:srcCompat="@drawable/rectangle_" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        app:srcCompat="@drawable/recover_password" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/putYourMailToRecover"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:srcCompat="@drawable/rectangle_" />

    <EditText
        android:id="@+id/email_input"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:layout_gravity="center_horizontal"
        android:padding="16dp" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:srcCompat="@drawable/rectangle_" />

    <Button
        android:id="@+id/recover_password_button"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:foreground="@drawable/recover_password_button"
        android:padding="16dp"
        android:text="@string/recoverpasswordButton"
        android:textSize="18sp"
        app:iconTint="#FFFFFF" />

</LinearLayout>
