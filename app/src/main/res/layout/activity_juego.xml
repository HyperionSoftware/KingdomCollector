<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.juego">


    <ImageView
        android:id="@+id/ImageView_campo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/tablero" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_player_name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/player_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_score"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/player_number_of_cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_cards"
            android:textSize="16sp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="415dp"
        android:layout_height="409dp"
        app:layout_constraintBottom_toBottomOf="@+id/ImageView_campo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ImageView_campo">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_00"
                android:layout_width="89dp"
                android:layout_height="116dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="64dp"
                android:text="@string/btn_00" />

            <Button
                android:id="@+id/button_01"
                android:layout_width="89dp"
                android:layout_height="116dp"
                android:layout_marginTop="64dp"
                android:text="@string/btn_01" />

            <Button
                android:id="@+id/button_02"
                android:layout_width="89dp"
                android:layout_height="116dp"
                android:layout_marginTop="64dp"
                android:text="@string/btn_02" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_10"
                android:layout_width="89dp"
                android:layout_height="116dp"
                android:layout_marginStart="72dp"
                android:text="@string/btn_10" />

            <Button
                android:id="@+id/button_11"
                android:layout_width="89dp"
                android:layout_height="116dp"

                android:text="@string/btn_11" />

            <Button
                android:id="@+id/button_12"
                android:layout_width="89dp"
                android:layout_height="116dp"
                android:text="@string/btn_12" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_20"
                android:layout_width="89dp"
                android:layout_height="116dp"
                android:layout_marginStart="72dp"
                android:text="@string/btn_20" />

            <Button
                android:id="@+id/button_21"
                android:layout_width="89dp"
                android:layout_height="116dp"
                android:text="@string/btn_21" />
                <!--Veure una imatge en el botÃ³-->
                <!--android:foreground="@drawable/tablero"-->

            <Button
                android:id="@+id/button_22"
                android:layout_width="89dp"
                android:layout_height="116dp"
                android:text="@string/btn_22" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="402dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/ImageView_campo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.93">

        <Button
            android:id="@+id/button_c1"
            android:layout_width="76dp"
            android:layout_height="111dp"
            android:layout_marginStart="12dp"
            android:text="@string/btn_c1" />

        <Button
            android:id="@+id/button_c2"
            android:layout_width="76dp"
            android:layout_height="111dp"
            android:text="@string/btn_c2" />

        <Button
            android:id="@+id/button_c3"
            android:layout_width="76dp"
            android:layout_height="111dp"
            android:text="@string/btn_c3" />

        <Button
            android:id="@+id/button_c4"
            android:layout_width="76dp"
            android:layout_height="111dp"
            android:text="@string/btn_c4" />

        <Button
            android:id="@+id/button_c5"
            android:layout_width="76dp"
            android:layout_height="111dp"
            android:text="@string/btn_c5" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>